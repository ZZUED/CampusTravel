<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="WindowFullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="SplashTheme" parent="WindowFullScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/img_splash_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="LoginETTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    <style name="LoginEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">@dimen/middle_margin</item>
        <item name="android:layout_marginEnd">@dimen/middle_margin</item>
        <item name="android:theme">@style/LoginETTheme</item>
        <item name="android:textSize">@dimen/common_text_size_small</item>
    </style>
    <style name="HomeLeftGridItemStyle">
        <item name="android:background">@drawable/ripple_home_left_grid_item_bg</item>
        <item name="android:layout_margin">@dimen/large_margin</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/middle_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="HomeBtmNaviStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
    </style>
    <style name="SettingItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/large_margin</item>
        <item name="android:paddingBottom">@dimen/large_margin</item>
        <item name="android:paddingStart">@dimen/middle_margin</item>
        <item name="android:paddingEnd">@dimen/middle_margin</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:drawableEnd">@drawable/ic_home_right_arrow_gray_small</item>
        <item name="android:textSize">@dimen/common_text_size_middle</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="SplitLineViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:layout_marginStart">@dimen/middle_margin</item>
        <item name="android:layout_marginEnd">@dimen/middle_margin</item>
        <item name="android:background">@color/colorGray</item>
    </style>
    <style name="ModifyProfileItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/middle_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="ModifyProfileItemTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/common_text_size_middle</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="ModifyPasswordETStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_home_bottom_scroll_gray_border</item>
        <item name="android:textSize">@dimen/common_text_size_large</item>
        <item name="android:padding">@dimen/middle_margin</item>
        <item name="android:layout_marginStart">@dimen/middle_margin</item>
        <item name="android:layout_marginTop">@dimen/middle_margin</item>
        <item name="android:layout_marginEnd">@dimen/middle_margin</item>
    </style>
</resources>

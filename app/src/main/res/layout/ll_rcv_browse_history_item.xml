<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/middle_margin"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_browse_history_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:src="@drawable/img_boat_along_mei_lake" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/large_margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_browse_history_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/small_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size_large"
            android:text="郑州大学南核心教学区"/>
        <TextView
            android:id="@+id/tv_browse_history_date"
            android:layout_marginTop="@dimen/middle_margin"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/common_text_size_middle"
            android:text="2018-05-06"/>
    </LinearLayout>
</LinearLayout>
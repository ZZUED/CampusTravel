<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_view_home_grid_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tv_view_home_grid_title"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/home_page_title_size_small"
        android:layout_gravity="center"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/tv_view_home_grid_sub_title"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size_large"/>
</LinearLayout>
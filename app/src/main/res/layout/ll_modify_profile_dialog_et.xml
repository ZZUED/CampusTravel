<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/middle_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_modify_profile_dialog_title"
        android:layout_marginTop="@dimen/middle_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_text_size_large"/>
    <EditText
        android:id="@+id/et_modify_profile_dialog_content"
        android:layout_marginTop="@dimen/home_page_margin_small"
        android:layout_marginBottom="@dimen/middle_margin"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/middle_margin"
        android:paddingEnd="@dimen/middle_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin"
        android:background="@drawable/shape_home_bottom_scroll_gray_border"
        android:textSize="@dimen/common_text_size_small"
        android:textColor="@android:color/black"/>
</LinearLayout>